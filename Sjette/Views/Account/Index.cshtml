    var lstActivitiesLastMonth = new List<Activities>();

    foreach (var item in Model.Item3)
    {
        var x = (DateTime.Now - item.StartTime).TotalDays;
        if (x < 30 && x > 0)
        {
            lstActivitiesLastMonth.Add(item);
        }


        if (item.ActivityType == "Cycling")
        {
            lstCycling.Add(item);
        }
        else if (item.ActivityType == "Hiking")
        {
            lstHiking.Add(item);
        }
        else
        {
            lstRunning.Add(item);
        }
    }

    var tupleActivities = Tuple.Create(lstCycling, lstRunning, lstHiking);
}

@{
    var rankingGroups = new Dictionary<int, Dictionary<int, Dictionary<string, int>>>();

    foreach (var i in Model.Item4)
    {
        int groupId = i.Key;
        var activityList = i.Value;
        var userDict = new Dictionary<int, Dictionary<string, int>>();

        foreach (var j in activityList)
        {
            var userId = j.fk_UserID;
            var activityDict = new Dictionary<string, int>();
            var keylist = new List<int>(userDict.Keys);
            if (keylist.Contains(userId))
            {
                var usertemp = userDict[userId];

                var cycling = usertemp["cycling"];

                var hiking = usertemp["hiking"];
                var running = usertemp["running"];
                var calories = usertemp["calories"];
                var distance = usertemp["distance"];

                if (j.ActivityType == "Cycling")
                {
                    activityDict["cycling"] = cycling + 1;
                    activityDict["running"] = running;
                    activityDict["hiking"] = hiking;

                }
                else if (j.ActivityType == "Running")
                {
                    activityDict["running"] = running + 1;
                    activityDict["hiking"] = hiking;
                    activityDict["cycling"] = cycling;

                }
                else
                {
                    activityDict["hiking"] = hiking + 1;
                    activityDict["running"] = running;
                    activityDict["cycling"] = cycling;
                }

                activityDict["calories"] = calories + j.TotalCalories;
                activityDict["distance"] = distance + Convert.ToInt32(j.TKm);
            }
            else
            {
                activityDict["running"] = 0;
                activityDict["cycling"] = 0;
                activityDict["hiking"] = 0;
                if (j.ActivityType == "Cycling")
                {
                    activityDict["cycling"] = 1;

                }
                else if (j.ActivityType == "Running")
                {
                    activityDict["running"] = 1;
                }
                else
                {
                    activityDict["hiking"] = 1;
                }

                activityDict["calories"] = j.TotalCalories;
                activityDict["distance"] = Convert.ToInt32(j.TKm);
            }
            userDict[userId] = activityDict;
        }
        rankingGroups[groupId] = userDict;
    }
}


@{
